@model FrontEnd.ViewModels.KonfirmasiBookingViewModels

@{
    ViewBag.Title = "Isi Data Pasien";
}
<br />
<br />
<br />
<h2 style="text-align:center">Data Diri Pasien</h2>
<div class="text-center">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr style="border-color:#e0c4ac" />
            <br />
            <br />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group datapasien">
                <label class="control-label col-md-6 col-xs-12">Nama</label>
                <div class="col-md-6 col-xs-12" >
                    @Html.EditorFor(model => model.NamaPasien, new { htmlAttributes = new { @class = "form-control", @id = "txtnamapasien" } })
                    @Html.ValidationMessageFor(model => model.NamaPasien, "", new { @class = "text-danger" })
                </div>
            </div>




            <label class="col-md-6 col-xs-12 col-md-customoffset-2" id="tanggaldiv">Tanggal Lahir</label>
            <div class="col-md-6 col-xs-12" id="datepickerdiv">
                <div class="form-group" style="width:330px">
                    <div class='input-group date' id='datetimepicker1'>
                        <input type='text' name="tanggal" class="form-control datepicker txttglpasien" id="datepickerhome" />

                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>


                <script type="text/javascript">
                    $(function () {
                        $('#datetimepicker1').datetimepicker({
                            format: 'DD-MM-YYYY'
                        });
                    });


                </script>
            </div>



            <div class="form-group">
                <div class="col-md-12 col-xs-12">
                    <button type="submit" value="Create" class="btn btn-default">Simpan</button>

                </div>
            </div>

        </div>

    }
    </div>
